{
    "$schema": "https://json.schemastore.org/chrome-manifest",
    "name": "YouTube Shorts Skipper",
    "version": "0.1.0",
    "homepage_url": "https://github.com/kettei-sproutty/youtube-shorts-skipper",
    "description": "Enable five seconds skip on YouTube Shorts",
    "manifest_version": 3,
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "tabs",
      "http://*/*",
      "https://*/*"
    ],
    "icons": {
      "16": "/icons/favicon-16x16.png",
      "128": "/icons/favicon-128x128.png"
    },
    "host_permissions": ["https://*.youtube.com/shorts*", "https://youtube.com/shorts*", "https://www.youtube.com/shorts*"],
    "background": {
      "service_worker": "background.js"
    }
  }
  